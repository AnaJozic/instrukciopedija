<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".SplashScreenActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_back"
        app:backgroundTint="#FFFFFF" />


    <ImageView
        android:id="@+id/imgView_logo"
        android:layout_width="307dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_instrukciopedija_logo_transparent_black"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <EditText
        android:id="@+id/recoverEmail"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imgView_logo"
        android:layout_alignStart="@+id/imgView_logo"
        android:layout_alignLeft="@+id/imgView_logo"
        android:layout_alignEnd="@+id/imgView_logo"
        android:layout_alignRight="@+id/imgView_logo"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:autofillHints=""
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_envelope"
        android:drawableLeft="@drawable/ic_envelope"
        android:drawablePadding="20dp"
        android:fontFamily="@font/chivo_light"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/button_recover_password"
        android:layout_width="286dp"
        android:layout_height="57dp"
        android:layout_below="@+id/recoverEmail"
        android:layout_alignStart="@+id/recoverEmail"
        android:layout_alignLeft="@+id/recoverEmail"
        android:layout_alignEnd="@+id/recoverEmail"
        android:layout_alignRight="@+id/recoverEmail"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/chivo_light"
        android:text="Resetirajte lozinku"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="#14000000"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recoverEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/recoverEmail"
        app:layout_constraintTop_toBottomOf="@+id/recoverEmail"
        app:layout_constraintVertical_bias="0.049" />


</RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>